# Settings
set preview true
set scrolloff 10
set icons
set previewer ~/.config/lf/previewer.sh
set hidden true
set drawbox true

# Maps
map . set hidden!
map D delete
map Q quitcd
map <enter> open
map <c-z> $ kill -STOP $PPID
map - $~/.config/lf/draw_img.sh "$f"

# Functions
cmd open ${{
    case $(file --mime-type "$f" -bL) in
        text/*|application/json) $EDITOR "$f";;
        *) setsid xdg-open "$f" >/dev/null 2>&1 & ;;
    esac
}}

cmd mkdir ${{
  printf "Directory Name: "
  read ANSWER
  mkdir $ANSWER
}}

cmd mkfile ${{
  printf "File Name: "
  read ANSWER
  touch $ANSWER
}}
