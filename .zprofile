# zsh directory
export ZDOTDIR="$HOME/.config/zsh"
# Wallpapers directory
export WALLPAPERS="$HOME/Desktop/Wallpapers-ChrisAtMachine"

# Commands commonly used in scripts
export LOCK="betterlockscreen -l dim"

